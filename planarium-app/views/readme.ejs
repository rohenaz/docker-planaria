<html>
<head>
<title>Planaria</title>
<meta name="viewport" content="width=device-width">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700|Raleway" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.3.3/ace.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.3.3/mode-javascript.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/1.9.0/showdown.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.4.2/theme-solarized_light.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.13.1/highlight.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.13.1/styles/solarized-light.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4Iu    LW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
<style>
body {
  font-family: 'Open Sans', sans-serif;
  font-weight: 400;
  font-size: 14px;
  color: rgba(0,0,0,0.8);
  margin: 0;
}
.full-width {
  width: 100%;
}
p > img {
  max-width: 100%;
}
.name {
  display: block !important;
  margin: 0;
}
.description {
  display: block !important;
}
nav {
  padding: 20px;
  text-align: center;
}
.logo {
  height: 30px;
}
.container {
  max-width: 800px;
  margin: 0 auto;
}
.label {
  font-size: 12px;
  padding: 5px 0;
  color: gray;
}
.item {
  padding: 20px;
  margin: 10px 0;
  background: rgba(0,0,0,0.02);
  font-size: 14px;
}
#editor {
  margin: 20px 0;
}
#readme {
  display: none;
}
#md {
  margin: 20px 0;
  /*
  border: 1px solid rgba(0,0,0,0.1);
  border-radius: 3px;
  */
}
#node {
  background: rgba(126,255,13,0.2);
}
#node.offline {
  background: white;
  color: gray;
}
#node.offline .header {
  color: gray;
}
#node.offline a {
  color: gray;
}

#node .header {
  color: green;
  padding: 10px;
}
#node a {
  color: rgba(0,0,0,0.8);
}
#list, #node {
  margin: 20px 0;
  border: 1px solid rgba(0,0,0,0.1);
  border-radius: 3px;
}
#list .header {
  background: #f1f8ff;
  padding: 10px;
}
#list a {
  color: #0366d6;
}
#md .header {
  background: whitesmoke;
  padding: 10px;
}
#md .content {
  padding: 20px;
}
h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  letter-spacing: -1px;
}
.large {
  font-size: 40px;
}
pre {
  font: 12px/normal 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace;
}
#list .file, #node .file {
  display: flex;
  align-items: center;
  padding: 10px;
  text-decoration:  none;
  border: 1px solid rgba(0,0,0,0.05);
}
.flexible {
  flex-grow: 1;
}
.header {
  font-size: 12px;
  font-weight: 600;
  color: rgba(0,0,0,0.7);
}
.header i {
  margin-right: 6px;
}
#install {
  margin: 20px 0;
  border: 1px solid rgba(0,0,0,0.1);
  border-radius: 3px;
}
#install .header {
  padding: 10px;
}
#install pre {
  margin: 0;
  background: #2a2a2a;
  color: white;
  padding: 10px;
}
#install pre i {
  color: rgba(255,255,255,0.4);
  margin-right: 7px;
}
.selected {
  background: rgba(0,0,0,0.05);
  font-weight: 700;
}
.clock {
  padding: 0 10px;
  color: rgba(0,0,0,0.6);
  font-weight: bold;
  font-size: 12px;
  border-right: 1px solid rgba(0,0,0,0.1);
  margin-right: 10px;
}
hr {
  border-top: 1px solid rgba(0,0,0,0.05);
  border-bottom: none;
  margin: 50px 0;
}
.center {
  text-align: center;
}
blockquote {
  border-left: 5px solid silver;
  margin: 20px 0;
  padding-left: 20px;
  color: gray;
}
</style>
<script>
document.addEventListener("DOMContentLoaded", function(e) {
  var converter = new showdown.Converter();
  var md = document.querySelector("#readme").value
  var html = converter.makeHtml(md);
  document.querySelector("#md .content").innerHTML = html
  console.log("html = ", html)
  hljs.initHighlightingOnLoad();
})
</script>
</head>
<body>
<div class='container'>
  <textarea id='readme'><%-readme%></textarea>
  <div id='md'>
    <div class='content'></div>
  </div>
</div>
</body>
</html>
